<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>

        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/black_transparent</item>
        <item name="background">@color/black_transparent</item>
        <item name="colorPrimary">@color/black_transparent</item>
        <item name="colorPrimaryDark">@color/darker_black_transparent</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SettingsActionBar</item>
    </style>

    <style name="SettingsActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black</item>
        <item name="android:height">56dp</item>
    </style>

    <style name="TextView">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.RateValue">
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextView.Description">
        <item name="android:padding">2dp</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>
