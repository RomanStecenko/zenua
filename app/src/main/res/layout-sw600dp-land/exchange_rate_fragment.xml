<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:background="@android:color/darker_gray">

    <LinearLayout
        android:id="@+id/updated_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/updated"
            style="@style/TextView.Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            tools:text="last update date" />

        <TextView
            android:id="@+id/description"
            style="@style/TextView.Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            tools:text="average rate of banks" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/converter"
        android:layout_below="@+id/updated_description"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buy_sell_titles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/land_buy_sell_left_right"
            android:paddingRight="@dimen/land_buy_sell_left_right"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/description_top"
                android:text="@string/buy"
                android:textSize="@dimen/buy_sell_title"
                android:visibility="invisible" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/buy"
                android:textSize="@dimen/buy_sell_title" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/sell"
                android:textSize="@dimen/buy_sell_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/description_top">

            <TextView
                android:id="@+id/usd_rate"
                style="@style/TextView.RateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_numbers"
                tools:text="25.5"
                tools:visibility="gone" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usd"
                android:textSize="@dimen/rate_title" />

            <LinearLayout
                android:id="@+id/buy_sell_usd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/usd_rate_buy"
                    style="@style/TextView.RateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/rate_numbers"
                    tools:text="24.3" />

                <TextView
                    android:id="@+id/usd_rate_sell"
                    style="@style/TextView.RateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/rate_numbers"
                    tools:text="26.7" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/description_top">

            <TextView
                android:id="@+id/eur_rate"
                style="@style/TextView.RateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_numbers"
                tools:text="35.5"
                tools:visibility="gone" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eur"
                android:textSize="@dimen/rate_title" />

            <LinearLayout
                android:id="@+id/buy_sell_eur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/eur_rate_buy"
                    style="@style/TextView.RateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/rate_numbers"
                    tools:text="24.3" />

                <TextView
                    android:id="@+id/eur_rate_sell"
                    style="@style/TextView.RateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/rate_numbers"
                    tools:text="26.7" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/description_top">

            <TextView
                android:id="@+id/rub_rate"
                style="@style/TextView.RateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_numbers"
                tools:text="0.5"
                tools:visibility="gone" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rub"
                android:textSize="@dimen/rate_title" />

            <LinearLayout
                android:id="@+id/buy_sell_rub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/rub_rate_buy"
                    style="@style/TextView.RateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/rate_numbers"
                    tools:text="24.3" />

                <TextView
                    android:id="@+id/rub_rate_sell"
                    style="@style/TextView.RateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/rate_numbers"
                    tools:text="26.7" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/converter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/link_for_resource"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="horizontal"
        tools:visibility="visible">

        <TextView
            style="@style/TextView.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/uah"
            android:textSize="@dimen/buy_sell_title" />

        <EditText
            android:id="@+id/converter_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/amount"
            android:inputType="numberDecimal|numberSigned"
            android:maxWidth="240dp"
            android:minWidth="50dp"
            android:maxLength="14"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textSize="@dimen/buy_sell_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--invisible placeholder, can be gone or invisible-->
            <TextView
                style="@style/TextView.Description"
                android:id="@+id/converter_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usd"
                android:textSize="@dimen/rate_title"
                android:visibility="gone" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usd"
                android:textSize="@dimen/rate_title" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eur"
                android:textSize="@dimen/rate_title" />

            <TextView
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rub"
                android:textSize="@dimen/rate_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                style="@style/TextView.Description"
                android:id="@+id/converter_buy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/buy"
                android:textSize="@dimen/rate_title"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/usd_result"
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_title"
                tools:text="1000000.50" />

            <TextView
                android:id="@+id/eur_result"
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_title"
                tools:text="349.58" />

            <TextView
                android:id="@+id/rub_result"
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_title"
                tools:text="678.21" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/converter_sell_layout"
            android:paddingLeft="16dp">

            <TextView
                style="@style/TextView.Description"
                android:id="@+id/converter_sell_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/sell"
                android:textSize="@dimen/rate_title"
                tools:visibility="gone"/>

            <TextView
                android:id="@+id/usd_result_sell"
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_title"
                tools:text="1000000.50" />

            <TextView
                android:id="@+id/eur_result_sell"
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_title"
                tools:text="349.58" />

            <TextView
                android:id="@+id/rub_result_sell"
                style="@style/TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_title"
                tools:text="678.21" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/link_for_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        tools:text="LINK" />

</RelativeLayout>
