<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/TextView.Description"
        tools:text="last update date" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/description_top"
        android:layout_below="@id/updated"
        android:layout_centerHorizontal="true"
        style="@style/TextView.Description"
        tools:text="average rate of banks" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/description"
        android:layout_above="@+id/link_for_resource"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buy_sell_titles"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/description_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="@dimen/buy_sell_title"
                android:text="@string/buy"
                style="@style/TextView.Description"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/buy_sell_title"
                android:text="@string/sell"
                style="@style/TextView.Description"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buy_sell_usd"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/usd_rate_buy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/rate_numbers"
                    style="@style/TextView.RateValue"
                    tools:text="24.3" />

                <TextView
                    android:id="@+id/usd_rate_sell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/rate_numbers"
                    style="@style/TextView.RateValue"
                    tools:text="26.7" />

            </LinearLayout>

            <TextView
                android:id="@+id/usd_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_numbers"
                style="@style/TextView.RateValue"
                tools:text="25.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Description"
                android:textSize="@dimen/rate_title"
                android:text="@string/usd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buy_sell_eur"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/eur_rate_buy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/rate_numbers"
                    style="@style/TextView.RateValue"
                    tools:text="24.3" />

                <TextView
                    android:id="@+id/eur_rate_sell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/rate_numbers"
                    style="@style/TextView.RateValue"
                    tools:text="26.7" />

            </LinearLayout>

            <TextView
                android:id="@+id/eur_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_numbers"
                style="@style/TextView.RateValue"
                tools:text="35.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Description"
                android:textSize="@dimen/rate_title"
                android:text="@string/eur" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buy_sell_rub"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/rub_rate_buy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/rate_numbers"
                    style="@style/TextView.RateValue"
                    tools:text="24.3" />

                <TextView
                    android:id="@+id/rub_rate_sell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/rate_numbers"
                    style="@style/TextView.RateValue"
                    tools:text="26.7" />

            </LinearLayout>

            <TextView
                android:id="@+id/rub_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rate_numbers"
                style="@style/TextView.RateValue"
                tools:text="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Description"
                android:textSize="@dimen/rate_title"
                android:text="@string/rub" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/link_for_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:text="LINK" />

</RelativeLayout>